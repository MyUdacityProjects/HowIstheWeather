<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <EditTextPreference
        android:defaultValue="@string/pref_loc_default"
        android:inputType="text"
        android:key="@string/pref_loc_key"
        android:singleLine="true"
        android:title="@string/pref_loc_title"></EditTextPreference>

    <ListPreference
        android:defaultValue="@string/pref_unit_default"
        android:dialogTitle="@string/pref_unit_title"
        android:entries="@array/pref_unit_title_array"
        android:entryValues="@array/pref_unit_value_array"
        android:key="@string/pref_unit_key"
        android:title="@string/pref_unit_title"></ListPreference>

</PreferenceScreen>
